{
  "name": "ntlango",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/webapp",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "npm --workspaces --if-present run build",
    "dev:api": "npm --workspace @ntlango/api run dev",
    "dev:web": "npm --workspace @ntlango/webapp run dev",
    "lint": "npm --workspaces --if-present run lint",
    "lint:fix": "prettier --write \"**/*.{js,ts,tsx,mjs,cjs,json,md}\" && npm --workspaces --if-present run lint:fix",
    "typecheck": "npm --workspaces --if-present run typecheck",
    "test:unit": "npm --workspaces --if-present run test:unit"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.4",
    "dotenv": "^16.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.5.4"
  }
}
