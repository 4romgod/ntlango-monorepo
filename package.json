{
  "name": "gatherle",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/webapp",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "npm run build:commons && npm run build:api && npm run build:web && npm run build:cdk",
    "build:api": "npm run build -w @gatherle/api",
    "build:web": "npm run build -w @gatherle/webapp",
    "build:cdk": "npm run build -w @gatherle/cdk",
    "build:commons": "npm run build -w @gatherle/commons",
    "dev:api": "npm run dev -w @gatherle/api",
    "dev:web": "npm run dev -w @gatherle/webapp",
    "lint:check": "npm run lint -w --if-present",
    "lint:fix": "prettier --write \"**/*.{js,ts,tsx,mjs,cjs,json,md}\"",
    "typecheck": "npm run typecheck -w --if-present",
    "test:unit": "npm run test:unit:api && npm run test:unit:web",
    "test:unit:api": "npm run test:unit -w @gatherle/api",
    "test:unit:web": "npm run test:unit -w @gatherle/webapp",
    "test:e2e:api": "npm run test:e2e -w @gatherle/api --",
    "test:e2e:web": "npm run test:e2e -w @gatherle/webapp --"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.4",
    "dotenv": "^16.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.5.4"
  }
}
