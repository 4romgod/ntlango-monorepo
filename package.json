{
  "name": "ntlango",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/webapp",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "npm run build -w @ntlango/commons && npm run build -w @ntlango/api && npm run build -w @ntlango/webapp && npm run build -w @ntlango/cdk",
    "dev:api": "npm --workspace @ntlango/api run dev",
    "dev:web": "npm --workspace @ntlango/webapp run dev",
    "lint": "npm --workspaces --if-present run lint",
    "lint:fix": "prettier --write \"**/*.{js,ts,tsx,mjs,cjs,json,md}\" && npm --workspaces --if-present run lint:fix",
    "typecheck": "npm --workspaces --if-present run typecheck",
    "test:unit": "npm run test:unit:api && npm run test:unit:web",
    "test:unit:api": "npm run test:unit -w @ntlango/api",
    "test:unit:web": "npm run test:unit -w @ntlango/webapp",
    "test:e2e:api": "npm run test:e2e -w @ntlango/api --",
    "test:e2e:web": "npm run test:e2e -w @ntlango/webapp --"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.4",
    "dotenv": "^16.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.5.4"
  }
}
