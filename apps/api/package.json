{
  "name": "@ntlango/api",
  "version": "1.0.0",
  "description": "This npm workspace contains the business logic for the ntlango graphql api",
  "main": "dist/lib/index.js",
  "types": "dist/types/lib/index.d.ts",
  "scripts": {
    "build": "npm-run-all lint build:ts",
    "build:ts": "echo '\nTranspilling ts source code...' && tsc --build --pretty --verbose && echo 'All done with the build!'",
    "build:node": "node -r ts-node/register",
    "emit-schema": "ts-node lib/scripts/emit-schema.ts",
    "build:image": "docker build -t ntlango-backend .",
    "dev": "nodemon lib/scripts/startServer.ts",
    "start:ts": "ts-node lib/scripts/startServer.ts",
    "start:js": "node -r ts-node/register dist/lib/scripts/startServer.js",
    "seed": "ts-node lib/scripts/seed.ts",
    "geocode-events": "ts-node lib/scripts/geocode-events.ts",
    "lint": "eslint \"lib/**/*.{ts,tsx}\" \"test/**/*.ts\"",
    "lint:fix": "eslint \"lib/**/*.{ts,tsx}\" \"test/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit --pretty",
    "test": "npm-run-all test:*",
    "test:canary": "jest --config=test/canary/jest.config.ts",
    "test:integration": "jest --config=test/integration/jest.config.ts",
    "test:unit": "jest --config=test/unit/jest.config.ts --runInBand"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@as-integrations/aws-lambda": "^3.1.0",
    "@aws-sdk/client-s3": "^3.981.0",
    "@aws-sdk/client-secrets-manager": "^3.981.0",
    "@aws-sdk/s3-request-presigner": "^3.981.0",
    "@ntlango/commons": "1.0.0",
    "@typegoose/typegoose": "^12.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.3.0",
    "reflect-metadata": "^0.2.2",
    "rrule": "^2.8.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.140",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
