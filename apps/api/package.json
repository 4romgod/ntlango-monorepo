{
  "name": "@ntlango/backend",
  "version": "1.0.0",
  "description": "This repository contains the business logic for the backend",
  "main": "dist/lib/scripts/startServer.ts.js",
  "types": "dist/types/lib/server.d.ts",
  "scripts": {
    "build": "npm-run-all format test:unit build:ts",
    "build:ts": "echo '\nTranspilling ts source code...' && tsc --build --pretty --verbose && echo 'All done with the build!'",
    "dev": "nodemon lib/scripts/startServer.ts",
    "start": "npm-run-all start:ts",
    "start:ts": "ts-node lib/scripts/startServer.ts",
    "start:js": "node -r ts-node/register dist/lib/scripts/startServer.js",
    "format": "prettier 'lib/**/*.{js,ts}' 'test/**/*.{js,ts}' --write",
    "seed": "ts-node lib/scripts/seed.ts",
    "test": "npm-run-all test:*",
    "test:canary": "jest --testPathPattern=test/canary",
    "test:integration": "jest --testPathPattern=test/integration --detectOpenHandles --forceExit",
    "test:unit": "jest --testPathPattern=test/unit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-type-json": "^0.3.2",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongoose": "^8.3.0",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "type-graphql": "^2.0.0-rc.1",
    "typescript": "^5.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.4",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  }
}
